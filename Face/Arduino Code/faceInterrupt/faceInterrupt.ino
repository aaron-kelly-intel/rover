int readPicture(boolean faceToLoad[1225])
{
  int index = 0;
  for (int g = 0; g < MAINROW; g++) // 4 rows of 5x8
  {
    for (int r = 0; r < SUBROW; r++) // 8 rows of 5x1
    {
      for (int i = 0; i < MAINCOL; i++) // 4 columns of 5x1
      {
        Byte = 0;
        for (int k = SUBCOL - 1; k >= 0; k--) // 5 bits per row
        {
          Byte += (faceToLoad[index] * pow(2, k));
          index++;
        }
        imageByteArray[g][i][r] = Byte;
        if (i != MAINCOL - 1) // for each main column apart from the last one
        {
          index++; // jump one to account for the pixel missing on the screen
        }
      }
    }
    index += 35;  //skip an entire line to account for missing pixels
  }
}



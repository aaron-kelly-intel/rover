{
  for (int g = 0; g < MAINROW; g++) // 4 rows of 5x8
  {
    for (int i = 0; i < MAINCOL; i++) // 4 columns of 5x1
    {
      if(count >= 8)
      {
        count = 0;
        delay(20);
        lcd.clear();
      }
      lcd.createChar(byte(count), imageByteArray[g][i]);
      lcd.setCursor(i + dist, g);
      //lcd.write('a');
      lcd.write(byte(count));
      count++;
    }
  }
}

